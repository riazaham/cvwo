<%= form_with model: todo do |form| %>

  <div style="border: 3px solid lightsalmon; border-radius: 10px; width: 600px; margin: 10px auto; padding: 10px;">
    <%= form.label :title %>:<br><br>
    <%= form.text_field :title %>
    <%= todo.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div style="border: 3px solid lightsalmon; border-radius: 10px; width: 600px; margin: 10px auto; padding: 10px;">
    <%= form.label :description %>:<br><br>
    <%= form.text_area :body %>
    <%= todo.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div style="border: 3px solid lightsalmon; border-radius: 10px; width: 600px; margin: 10px auto; padding: 10px;">
    <%= form.label :deadline %>:<br><br>
    <%= form.text_area :deadline %>
    <%= todo.errors.full_messages_for(:deadline).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div style="border: 3px solid lightsalmon; border-radius: 10px; width: 600px; margin: 10px auto; padding: 10px;">
    <%= form.label :progress %>:<br><br>
    <%= form.text_area :progress %>
    <%= todo.errors.full_messages_for(:progress).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <br>

  <div style="border: 3px solid lightsalmon; border-radius: 20px; width: 100px; margin: 5px auto; padding: 10px; text-align: center">
      <%= form.submit %>
  </div>

  <div style="border: 3px solid dodgerblue; border-radius: 20px; width: 100px; margin: 5px auto; padding: 10px; text-align: center">
    <%= link_to "Home", root_path %>
  </div>
<% end %>